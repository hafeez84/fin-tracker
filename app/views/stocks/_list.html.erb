<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Symbol</th>
			<th>Current Price</th>
			<% if @user.id == current_user.id %>
				<th>Actions</th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% @user_stocks.each do |us| %>
		<tr>
			<td> <%= us.name %></td>
			<td> <%= us.thicker %></td>
			<td> <%= us.last_price %></td>
			<% if @user.id == current_user.id %>
			<td>
				<%= link_to "Delete this stock", user_stock_path(us), method: :delete, data: {confirm: "Are you sure ?"},
				class: "btn btn-xs btn-danger" %>
			</td>
			<% end %>
		</tr>
		<% end %>
	</tbody>
</table>